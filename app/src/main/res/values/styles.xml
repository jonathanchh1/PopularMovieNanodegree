<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- detail page theme -->
    <style name="DetailTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/Widget.AppCompat.ActionBar</item>
    </style>

    <!-- Detail page theme action bar. -->
    <style name="ActionBar.DetailTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse"></style>

    <!-- settings theme -->
    <style name="SettingTheme" parent="AppTheme">
    </style>

    <!--layout background -->
    <style name="LayoutTheme" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    >
    <!-- detail headline -->
    <style name="detailHeader" parent="AppTheme">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/primary</item>
    </style>

    <!-- detail poster -->
    <style name="detailPoster" parent="AppTheme">
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- detail rating -->
    <style name="detailRating" parent="AppTheme">
    </style>


    <!-- detail year-->
    <style name="detailYear" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- detail synopsis -->
    <style name="detailSynopsis" parent="AppTheme">
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
</resources>
